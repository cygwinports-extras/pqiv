DESCRIPTION="GTK+2 port of Qiv"
HOMEPAGE="http://www.pberndt.com/Programme/Linux/pqiv/index.html"
SRC_URI="http://www.pberndt.com/raw/Programme/Linux/pqiv/_download/${P}.tbz"
PATCH_URI="0.8-dllimport.patch
           0.8-gcc4.patch"

src_compile() {
	lndirs
	cd ${B}
	./configure --prefix=/usr --no-inotify || error "configure failed"
	cygmake
}

src_test() { :; }

src_install() {
	cd ${B}
	newbin qiv.exe pqiv.exe
	newman qiv.1 pqiv.1
}
DOCS="gpl.txt"
