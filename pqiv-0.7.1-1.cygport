DESCRIPTION="GTK+2 port of Qiv"
HOMEPAGE="http://www.pberndt.com/Programme/Linux/pqiv/index.html"
SRC_URI="http://www.pberndt.com/raw/Programme/Linux/pqiv/_download/${P}.tbz"

src_compile() {
	lndirs
	cd ${B}
	./configure \
		--prefix=/usr --no-compositing --no-inotify \
		|| error "configure failed"
	cygmake
}

src_test() { :; }

src_install() {
	cd ${B}
	cyginstall
	dosym qiv.exe /usr/bin/pqiv
}
